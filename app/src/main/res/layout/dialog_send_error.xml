<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sendErrorRootLayout"
    android:layout_width="400dp"
    android:layout_height="500dp"
    android:background="@drawable/shape_connecting_dialog"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="top|center_horizontal">

    <TextView
        android:id="@+id/sendErrorTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/SendError_TitleTextSize"
        android:text="@string/sendError_title"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/SendError_TitleHeight"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/sendErrorDeviceIDTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/SendError_deviceIDTextSize"
            android:text="@string/sendError_deviceID"/>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/sendErrorDeviceID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="18dp"
            autofit:minTextSize="5dp"
            android:text="" />


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/sendErrorDescriptionTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/SendError_TitleHeight"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/SendError_DescriptionTextSize"
        android:text="@string/sendError_errorDescription"/>

    <EditText
        android:id="@+id/sendErrorDescription"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:textColor="@color/black"/>



    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/sendError_sendToServerButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/SendError_DescriptionHeight"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/sWhite"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:cardCornerRadius="3dp"
        tools:cardElevation="4dp"
        tools:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sendError_sendToServerTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/sendError_sendToServer"
                android:textColor="@android:color/black"
                android:textSize="@dimen/SendError_ButtonTextSize" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/sendError_sendToTelegramButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/SendError_DescriptionHeight"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/sWhite"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:cardCornerRadius="3dp"
        tools:cardElevation="4dp"
        tools:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sendError_sendToTelegramTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/sendError_sendToTelegram"
                android:textColor="@android:color/black"
                android:textSize="@dimen/SendError_ButtonTextSize" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/sendError_cancelButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/SendError_DescriptionHeight"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="6dp"
        android:baselineAligned="false"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/sWhite"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:cardCornerRadius="3dp"
        tools:cardElevation="4dp"
        tools:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sendError_cancelTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/button_cancelCaption"
                android:textColor="@android:color/black"
                android:textSize="@dimen/SendError_ButtonTextSize" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
