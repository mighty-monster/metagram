<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:gravity="end"
    android:orientation="vertical"
    android:padding="0dp"
    app:layout_collapseParallaxMultiplier="0.0"
    tools:context="vp.metagram.ui.LogInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/lLoginPanel"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/login_connectingToInsta"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_title_size" />
    </LinearLayout>

    <WebView
        android:id="@+id/login_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="1000">

    </WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/lLoginPanel"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_problem"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_title_size" />
    </LinearLayout>

</LinearLayout>
