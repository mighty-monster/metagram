<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/legalActivity_rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_item_bg"
        android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/sCoolGrayC3"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:visibility="visible">

        <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container_external"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/shimmer_text_exteral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@android:color/black"
                    android:textSize="45sp" />

            <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_view_container_internal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/shimmer_text_internal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/sCoolGrayC1"
                        android:textSize="45sp" />


            </com.facebook.shimmer.ShimmerFrameLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>


    </LinearLayout>

    <TextView
            android:id="@+id/legalActivity_LicencesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:text="@string/LegalActivity_Licences"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/shape_rectangle_button"
            android:textColor="@color/sBlack"/>

    <TextView
            android:id="@+id/legalActivity_TermsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:text="@string/LegalActivity_Terms"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:background="@drawable/shape_rectangle_button"
            android:textColor="@color/sBlack"/>

    <TextView
            android:id="@+id/legalActivity_PrivacyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:text="@string/LegalActivity_Privacy"
            android:visibility="gone"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/shape_rectangle_button"
            android:textColor="@color/sBlack"/>



</LinearLayout>
