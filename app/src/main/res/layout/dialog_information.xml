<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@color/sCoolGrayC3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical">
        <ImageView
            android:layout_width="@dimen/dialog_Information_LogoSize"
            android:layout_height="@dimen/dialog_Information_LogoSize"
            android:layout_marginStart="@dimen/dialog_Information_LogoStartMargin"
            android:gravity="center"
            android:background="@color/lTransparent"
            app:srcCompat="@mipmap/ic_launcher_foreground"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEXTO"
            android:id="@+id/dialog_title"
            android:layout_marginStart="@dimen/dialog_Information_TitleStartMargin"
            android:textSize="@dimen/dialog_Information_TitleTextSize"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />
    </LinearLayout>


    <TextView
        android:layout_width="@dimen/dialog_Information_MessageWidth"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_content"
        android:layout_margin="@dimen/dialog_Information_TitleStartMargin"
        android:textSize="@dimen/dialog_Information_MessageTextSize"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:gravity="start" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">


        <Button
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialog_Information_ButtonHeight"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:background="@drawable/shape_report_fragment"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dialog_Information_ButtonTextSize" />




    </LinearLayout>



</LinearLayout>