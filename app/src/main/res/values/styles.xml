<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sCoolGrayC1</item>
        <item name="colorPrimaryDark">@color/sCoolGrayC3</item>
        <item name="colorAccent">@color/sBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MetagramTheme" parent="@style/AppTheme" />

    <style name="MetagramNewTheme" parent="@style/AppTheme" />

    <style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SettingSeekBarTheme" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="LicenceTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/sCoolGrayC1</item>
        <item name="colorPrimaryDark">@color/sCoolGrayC3</item>
        <item name="colorAccent">@color/sBlack</item>
    </style>

</resources>
